<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- importing jquery and js-cookie -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/js-cookie@rc/dist/js.cookie.min.js"></script>
    <link rel="stylesheet" href="../public/css/shared_elements.css" />
    <link rel="stylesheet" href="../public/css/home.css" />
    <title>Moomin's flower shop</title>
  </head>
  <body>
    <div class="top_navbar">
      <a href="#"><div class="btn" id="logout">Log out</div></a>
      <a href="#"><div class="btn" id="orders">My Orders</div></a>
      <a href="#"><div class="btn" id="cart">Cart</div></a>
      <a href="#"><div class="btn" id="home">Home</div></a>
    </div>

    <div class="banner">Moomin's flower shop!</div>

    <div class="bouquets">
      <h3>Our selection:  </h3>
      <ul>
        <% bouquets.forEach(bouq => { %>
        <li class="bouq">
          Bouquet <%= bouq.bouq_id %> - <b><%= bouq.price %> &euro;</b>
          <a href="#" class="cart"> Add to Cart</a>
          <ul style="display: none" class="bouq_content">
            <% bouq.flowers.forEach(element => { %>
            <li class="bouq_flower">
              <%=element.quantity %> <%= element.flower_name %>(s) <img src="../public/images/<%=element.flower_name%>.png" alt="<%=element.flower_name%>"> -- unit
              price: <%= element.price %> &euro; 
            </li>
            <% }) %>
          </ul>
        </li>

        <% }) %>
      </ul>
    </div>
    <h3>
      You can't find something you like?
      <a href="#" class="custom"> Make your own bouquet!</a>
    </h3>
  </body>
  <script src="../public/scripts/zoom.js"></script>
  <script src="../public/scripts/toggleBouquets.js"></script>
  <script src="../public/scripts/addToCart.js"></script>
  <script src="../public/scripts/logout.js"></script>
  <script src="../public/scripts/viewCart.js"></script>
  <script src="../public/scripts/viewOrders.js"></script>
</html>
